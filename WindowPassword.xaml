<Window x:Class="WPF_PR13.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PR13"
        mc:Ignorable="d"
        Title="Авторизация" Height="155" Width="260" Closing="Window_Closing" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" Width="240" Height="116" VerticalAlignment="Top">
        <TextBlock Text="Введите пароль:" Margin="68,10,68,87"/>
        <PasswordBox x:Name="password" PasswordChar="*" Margin="0,29,0,0" BorderBrush="#FF464748" HorizontalAlignment="Center" Width="200" Height="24" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18"></PasswordBox>
        <Button Content="Войти" Click="Enter_Click" Margin="20,67,0,0" Width="80" Height="30" FontSize="14" IsDefault="True" TabIndex="1" VerticalAlignment="Top" HorizontalAlignment="Left"></Button>
        <Button Content="Отмена" Click="Escape_Click" Margin="140,67,0,0" FontSize="14" Width="80" Height="30" TabIndex="2" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>
    </Grid>
</Window>
